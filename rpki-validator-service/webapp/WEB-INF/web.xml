<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>wicket.rpki-validator-service</display-name>

    <!-- Our wicket application -->
    <filter>
        <filter-name>wicket.rpki-validator-service</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>net.ripe.rpki.validator.daemon.ui.RpkiValidatorServiceApplication</param-value>
        </init-param>

        <init-param>
            <param-name>applicationFactoryClassName</param-name>
            <param-value>org.apache.wicket.spring.SpringWebApplicationFactory</param-value>
        </init-param>
    </filter>

    <!-- Spring Bootstrapping -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:rpki-vs-context.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <filter-mapping>
        <filter-name>wicket.rpki-validator-service</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
